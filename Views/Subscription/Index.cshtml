@model IEnumerable<Subscription>
@{
    ViewData["Title"] = "Abonamenty";
}

<h1>Spis Wszystkich Abonamentów</h1>

<div class="row">
    <div class="col-md-12 ">
        <table class="table">
            <thead></thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.SubscriptionId)</th>
                <th>@Html.DisplayNameFor(model => model.RegistrationNumber)</th>
                <th>@Html.DisplayNameFor(model => model.Street)</th>
                <th>@Html.DisplayNameFor(model => model.EndDate)</th>
                <th>@Html.DisplayNameFor(model => model.Active)</th>
                <th>@Html.DisplayNameFor(model => model.SubscriptionVariant)</th>
                <th>Akcje</th>
            </tr>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.SubscriptionId)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.RegistrationNumber)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Street)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.EndDate)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Active)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.SubscriptionVariant)
                    </td>
                    <td class="align-middle">
                        <a class="btn btn-outline-primary"><i class="badge-info bi-pencil-square"></i>Edycja</a> |
                        <a class="btn btn-danger"><i class="badge-info bi-trash"></i>Usuń</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>

    </div>
</div>